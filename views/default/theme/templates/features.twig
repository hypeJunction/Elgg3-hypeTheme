<div class="elgg-page-section elgg-page-features">
    <div class="elgg-inner">
        <div class="landing-features">
            <div class="landing-features__content">
                <div class="elgg-grid landing-features__columns">

                    {% for feature in data.items %}
                        <div class="elgg-col-1of3 landing-features__column">
                            <div class="elgg-image-block">
                                <div class="elgg-image">
                                    <img src="{{ feature.img.url }}" alt="{{ feature.title }}"
                                         class="landing-features__icon"/>
                                </div>
                                <div class="elgg-body">
                                    <h3 class="landing-features__title">
                                        {{ feature.title }}
                                    </h3>
                                    <h4 class="landing-features__description">
                                        {{ feature.description }}
                                    </h4>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
</div>